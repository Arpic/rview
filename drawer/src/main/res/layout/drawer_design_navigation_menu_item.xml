<merge
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/design_menu_item_area"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:id="@+id/design_menu_item_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="28dp"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:background="@drawable/notification"
            android:textAppearance="@style/TextAppearance.AppCompat.Notification"
            android:visibility="gone"/>
        <com.ruesga.rview.drawer.CheckedImageView
            android:id="@+id/design_menu_item_icon"
            android:layout_width="@dimen/design_navigation_icon_size"
            android:layout_height="@dimen/design_navigation_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_dialog_alert"
            android:contentDescription="@null"
            tools:ignore="PrivateResource"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/design_menu_item_icon"
            android:layout_toEndOf="@id/design_menu_item_icon"
            android:layout_toStartOf="@id/design_menu_item_notifications"
            android:layout_toLeftOf="@id/design_menu_item_notifications"
            android:layout_alignWithParentIfMissing="true"
            android:paddingLeft="@dimen/design_navigation_icon_padding"
            android:paddingStart="@dimen/design_navigation_icon_padding"
            android:layout_centerVertical="true"
            android:paddingRight="5dp"
            android:paddingEnd="5dp"
            android:orientation="vertical"
            tools:ignore="PrivateResource">
            <CheckedTextView
                android:id="@+id/design_menu_item_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                tools:ignore="PrivateResource"/>
            <TextView
                android:id="@+id/design_menu_item_subtext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|start"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.AppCompat.Body3"
                android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>

    <ViewStub
        android:id="@+id/design_menu_item_action_area_stub"
        android:inflatedId="@+id/design_menu_item_action_area"
        android:layout="@layout/design_menu_item_action_area"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="PrivateResource"/>

</merge>
